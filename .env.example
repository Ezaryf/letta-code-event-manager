# ═══════════════════════════════════════════════════════════════════════════
# CODEMIND CODING ASSISTANT - Configuration
# ═══════════════════════════════════════════════════════════════════════════

# ─── API Configuration ───────────────────────────────────────────────────────
# Get your API key from https://app.letta.ai (CodeMind uses Letta's AI backend)
CODEMIND_API_KEY=sk-let-your-api-key-here
CODEMIND_PROJECT_ID=

# ─── Theme & Display ─────────────────────────────────────────────────────────
# Available themes: ocean, forest, sunset, midnight, mono
CODEMIND_THEME=ocean

# Show timestamps on log lines (true/false)
SHOW_TIMESTAMPS=true

# Show detailed output during analysis (true/false)
VERBOSE_OUTPUT=false

# ─── IDE Detection & Collaboration ───────────────────────────────────────────
# CodeMind automatically detects your IDE for optimal collaboration.
# Supported Agentic IDEs (full AI collaboration):
#   - Kiro (AWS AI IDE)
#   - Antigravity
#   - Cursor
#   - Windsurf (Codeium)
#
# Supported Traditional IDEs:
#   - VS Code
#   - JetBrains (IntelliJ, WebStorm, PyCharm, etc.)
#   - Neovim, Vim
#   - Sublime Text
#   - Zed
#
# Force a specific IDE (optional, auto-detected by default)
# CODEMIND_IDE=kiro

# Enable AI collaboration with agentic IDEs (true/false)
IDE_COLLABORATION=true

# ─── Watcher Settings ────────────────────────────────────────────────────────
# Delay before analyzing after file change (milliseconds)
WATCHER_DEBOUNCE=2000

# How many folder levels deep to watch
WATCHER_DEPTH=20

# Watch all files in project (true) or just common folders (false)
WATCH_ALL=false

# File extensions to watch (comma-separated)
WATCH_EXTENSIONS=.js,.jsx,.ts,.tsx,.json,.css,.scss,.md

# ─── Auto-Fix Settings ───────────────────────────────────────────────────────
# Automatically apply fixes (true/false)
AUTO_APPLY=false

# Minimum confidence level to apply a fix (0.0 to 1.0)
# Higher = safer but fewer fixes, Lower = more fixes but riskier
MIN_CONFIDENCE=0.7

# Maximum fix attempts per file (prevents infinite loops)
MAX_FIX_ATTEMPTS=10

# Create backup before modifying files (true/false)
BACKUP_BEFORE_FIX=true

# Which issue types to auto-fix (comma-separated: bug,security,performance,style)
FIX_TYPES=bug,security,performance

# ─── Memory Settings ─────────────────────────────────────────────────────────
# Automatically remember project context (true/false)
AUTO_REMEMBER=false

# ─── Cognitive Engine ────────────────────────────────────────────────────────
# The Cognitive Engine transforms CodeMind from a reactive tool into a cognitive
# partner that thinks alongside you.

# Master switch for cognitive features (true/false)
COGNITIVE_ENGINE=true

# Flow Protection - Protects your deep work by knowing when to help and when
# to stay silent. Detects flow states and queues suggestions for later.
FLOW_PROTECTION=true

# Intent Detection - Detects what you're trying to accomplish through
# multi-signal analysis (typing speed, code patterns, navigation, etc.)
INTENT_DETECTION=true

# Predictive Analysis - Catches bugs before you write them using pattern
# analysis and historical learning.
PREDICTIVE_ANALYSIS=true

# ─── Debug ───────────────────────────────────────────────────────────────────
# Enable debug logging (true/false)
DEBUG=false
