# ═══════════════════════════════════════════════════════════════════════════
# LETTA CODING ASSISTANT - Configuration
# ═══════════════════════════════════════════════════════════════════════════

# ─── API Configuration ───────────────────────────────────────────────────────
# Get your API key from https://app.letta.ai
LETTA_API_KEY=sk-let-your-api-key-here
LETTA_PROJECT_ID=

# ─── Theme & Display ─────────────────────────────────────────────────────────
# Available themes: ocean, forest, sunset, midnight, mono
LETTA_THEME=ocean

# Show timestamps on log lines (true/false)
SHOW_TIMESTAMPS=true

# Show detailed output during analysis (true/false)
VERBOSE_OUTPUT=false

# ─── Watcher Settings ────────────────────────────────────────────────────────
# Delay before analyzing after file change (milliseconds)
WATCHER_DEBOUNCE=2000

# How many folder levels deep to watch
WATCHER_DEPTH=20

# Watch all files in project (true) or just common folders (false)
WATCH_ALL=false

# File extensions to watch (comma-separated)
WATCH_EXTENSIONS=.js,.jsx,.ts,.tsx,.json,.css,.scss,.md

# ─── Auto-Fix Settings ───────────────────────────────────────────────────────
# Automatically apply fixes (true/false)
AUTO_APPLY=false

# Minimum confidence level to apply a fix (0.0 to 1.0)
# Higher = safer but fewer fixes, Lower = more fixes but riskier
MIN_CONFIDENCE=0.7

# Maximum fix attempts per file (prevents infinite loops)
MAX_FIX_ATTEMPTS=10

# Create backup before modifying files (true/false)
BACKUP_BEFORE_FIX=true

# Which issue types to auto-fix (comma-separated: bug,security,performance,style)
FIX_TYPES=bug,security,performance

# ─── Memory Settings ─────────────────────────────────────────────────────────
# Automatically remember project context (true/false)
AUTO_REMEMBER=false

# ─── Debug ───────────────────────────────────────────────────────────────────
# Enable debug logging (true/false)
DEBUG=false
